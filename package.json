{
  "name": "@aws-template/cloudwatch-canary",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "bash scripts/clean-dependencies.sh",
    "postinstall": "cd infra/cleanup-function && pip3 install cfnresponse -t .",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node14 --external:SyntheticsLogger --external:Synthetics --outfile=canary/nodejs/node_modules/index.js",
    "zip:canary": "f() { cd canary && zip -r canary-$1.zip .; }; f",
    "zip:cleanup": "cd infra/cleanup-function && zip -r ../cleanup-function.zip .",
    "upload": "bash scripts/deploy-s3.sh",
    "deploy": "serverless deploy",
    "remove": "serverless remove",
    "remove:bucket": "f() { AWS_PAGER='' && aws s3 rb --force s3://$1; }; f"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/aws-lambda":"8.10.101",
    "@types/node": "18.6.3",
    "esbuild": "0.14.51",
    "rimraf":"3.0.2",
    "serverless": "3.21.0",
    "serverless-s3-cleaner": "2.0.1",
    "serverless-scriptable-plugin": "1.2.2",
    "uuid": "8.3.2"
  }
}
